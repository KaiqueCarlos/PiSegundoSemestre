    <!-- Código js para acessar o formulário de cadastro de animais-->
    <script>
        function openCadAnimal() {
            var form = document.getElementById("CadAnimal");
            if (form.style.display === "none" || form.style.display === "") {
                form.style.display = "block";
            } else {
                form.style.display = "none";
            }

        }

        function openBuscarParceiros() {

             fillRacasCombo();

            // Obtém o elemento do formulário pelo ID
            var form = document.getElementById("busca");
            if (form.style.display === "none" || form.style.display === "") {
                form.style.display = "block";
            } else {
                form.style.display = "none";
            }

            async function fillRacasCombo() {
            try {
                const response = await fetch('/getRacas');
                const data = await response.json();

                var racaSelect = document.getElementById('raca');
                racaSelect.innerHTML = '<option value="">-</option>'; // Opção padrão

                // Preencher as opções do select com os dados obtidos
                data.forEach(function (raca) {
                    var option = document.createElement('option');
                    option.value = raca.id;
                    option.text = raca.nome;
                    racaSelect.appendChild(option);
                });
            } catch (error) {
                console.error('Erro ao obter raças:', error);
            }
        }

            


        }

    </script>